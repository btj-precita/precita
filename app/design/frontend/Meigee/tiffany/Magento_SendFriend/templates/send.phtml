            <button type="submit"
                    class="action submit primary btn btn-primary"<?php if (!$block->canSend()): ?> disabled="disabled"<?php endif ?>>
                <span><?php /* @escapeNotVerified */ echo __('Send Email') ?></span></button>
        </div>
    </div>
