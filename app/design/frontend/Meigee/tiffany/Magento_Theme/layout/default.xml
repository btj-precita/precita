 <page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body meigee-config-add-attribute="class|tiffany_general/tiffany_layout/site_layout:::class|tiffany_general/tiffany_header/sticky_header_tablet" >
        <referenceContainer name="header.panel">
			<referenceBlock class="Meigee\Tiffany\Block\Frontend\Currency" name="currency" before="store_language" meigee-config-template="tiffany_general/tiffany_currency_switcher/currency_switcher_status" />
        </referenceContainer>
        <referenceContainer name="header.container">
			<container name="header.top.wrapper" htmlClass="top-block" htmlTag="div" before="-">
				<container name="header.top.inner" htmlClass="container" htmlTag="div" before="-">
					<container name="header.top.left" htmlClass="left-block" htmlTag="div" after="-" />
					<container name="header.top.right" htmlClass="right-block" htmlTag="div" after="-" />
				</container>
			</container>
            <container name="header.panel.wrapper2" htmlClass="middle-block container" htmlTag="div" after="header.top.wrapper">
				<referenceBlock class="Magento\Theme\Block\Html\Header" name="header" as="header" template="Magento_Theme::html/welcome.phtml" remove="true" />
				<container name="header.panel.inner" htmlClass="middle-block-inner row clearfix" htmlTag="div" before="-"> 
					<container name="header.panel.inner.left" htmlClass="col-md-4 hidden-sm hidden-xs welcome-wrapper" htmlTag="div" before="-">
						<block class="Magento\Theme\Block\Html\Header" name="header.welcome" template="Magento_Theme::html/welcome.phtml" />
					</container>
					<container name="header.panel.inner.center" htmlClass="logo-wrapper col-md-4 col-sm-6 clearfix" htmlTag="div" after="header.panel.inner.left">
						<block class="Magento\Cms\Block\Block" name="tiffany.header.text.blocks" after="-">
							<arguments>
								<argument name="block_id" xsi:type="string">tiffany_header_text_blocks</argument>
							</arguments>
						</block>
					</container>
					<container name="header.panel.inner.right" htmlClass="quick-access col-md-4 col-sm-6" htmlTag="div" after="-" />
				</container>
			</container>
			<container name="header.menu.wrapper" htmlClass="menu-wrapper" htmlTag="div" after="header.panel.wrapper2">
				<container name="header.menu" htmlClass="container" htmlTag="div" before="-">
					<container name="header.menu.inner" htmlClass="menu-inner clearfix" htmlTag="div" before="-">
						<container name="menu.block" htmlClass="toggle-nav clearfix" htmlTag="div" before="-" />
					</container>
				</container>
			</container>
            <block class="Meigee\Tiffany\Block\Frontend\BgSlider" name="bgslider" template="Meigee_Tiffany::bgslider.phtml" />
        </referenceContainer>
        
         <referenceContainer name="header-wrapper">
           <block class="Meigee\Tiffany\Block\Frontend\CustomLogo" name="logo" as="logo" template="Magento_Theme::html/header/logo.phtml">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                    <argument name="logo_img_height" xsi:type="number">100</argument>
                </arguments>
            </block>
			 <referenceBlock name="top.links">
				<!--  <block class="Magento\Customer\Block\Account\Link" name="top-link-myaccount">
					<arguments>
						 <argument name="label" xsi:type="string">My Account</argument>
						<argument name="class" xsi:type="string">top-link-myaccount</argument> 
					</arguments> 
				</block>  -->
				<block class="Magento\Customer\Block\Account\Link" name="my-account-link">
					<arguments>
						<argument name="label" xsi:type="string" translate="true">My Account</argument>
						<argument name="class" xsi:type="string">top-link-myaccount</argument> 
					</arguments>
				</block>
				<block class="Magento\Customer\Block\Account\RegisterLink" name="register-link">
					<arguments>
						<argument name="label" xsi:type="string" translate="true">Create an Account</argument>
						<argument name="class" xsi:type="string">top-link-create</argument> 
					</arguments>
				</block>
			</referenceBlock>
        </referenceContainer>

		 <referenceContainer name="page.top">
			<referenceBlock name="navigation.sections" remove="true" />
        </referenceContainer>
		
		<referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" as="subheader" template="Magento_Theme::html/subheader.phtml" />
		</referenceBlock>

		<container name="responsive.menu" htmlClass="responsive-menu" htmlTag="div">
			<block class="Magento\Theme\Block\Html\Topmenu" name="responsive.topnav" template="html/topmenu.phtml" after="-" />
		</container>

		<container name="menu" htmlClass="desktop-menu" htmlTag="div">
			<block class="Magento\Theme\Block\Html\Topmenu" name="topnav" template="html/topmenu_desktop.phtml" after="-" />
		</container>


        <move element="header.panel" destination="header.panel.inner.center" before="-" />
		<move element="top.links" destination="header.top.right" before="-" />
		<move element="header-wrapper" destination="header.panel" after="-" />
        <move element="minicart" destination="header.panel.inner.right" after="-"/>
        <move element="top.search" destination="header.panel.inner.right" after="-"/>
		<move element="responsive.menu" destination="header.panel.inner.right" after="minicart"/>
		<move element="menu" destination="menu.block" after="-"/>
        <move element="store_language" destination="header.top.right" after="top.links"/>
		<move element="currency" destination="header.top.right" after="store_language"/>
		
