			</container>
		</container>
		<move element="sticky.header" destination="header.container.wrapper" after="-" />
	 

		<referenceBlock name="register-link" remove="true" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_register" />
		<referenceBlock name="authorization-link" remove="true" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_login" />
		<!-- <referenceBlock name="authorization-link-login" remove="true" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_login" /> -->
		<referenceBlock name="wish-list-link" remove="true" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_wishlist" /> 
		<referenceBlock name="my-account-link" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_account" remove="true" /> 
		<referenceBlock name="catalog.compare.link" remove="true" meigee-config-bool="tiffany_general/tiffany_toplinks/toplinks_compare" /> 
		
		
       
		
        <referenceContainer name="footer-container" meigee-config-ibool="tiffany_general/tiffany_footer/custom_footer">
            <container name="footer" as="footer" label="Page Footer" htmlTag="div" htmlClass="footer content default">
				<container name="footer.inner" label="Footer Inner" htmlTag="div" htmlClass="container">
					<block class="Magento\Theme\Block\Html\Footer" name="copyright" template="html/copyright.phtml"/>
					<block class="Magento\Framework\View\Element\Html\Links" name="footer_links">
						<arguments>
							<argument name="css_class" xsi:type="string">footer links</argument>
						</arguments>
					</block>
					<block class="Magento\Store\Block\Switcher" name="store_switcher" as="store_switcher" template="switch/stores.phtml"/>
					<!-- <block class="Magento\Framework\View\Element\Template" name="report.bugs" template="Magento_Theme::html/bugreport.phtml" /> -->
				</container>
            </container>
        </referenceContainer>
		
		<referenceContainer name="footer-container" meigee-config-bool="tiffany_general/tiffany_footer/custom_footer">
            <container name="footer" as="footer" label="Page Footer" htmlTag="div" htmlClass="footer">
				<block class="Magento\Cms\Block\Block" name="tiffany.footer" meigee-config-add-argument="block_id|tiffany_general/tiffany_footer/custom_footer_block">
					<arguments>
						<argument name="block_id" xsi:type="string">tiffany_footer</argument>
					</arguments>
				</block>
